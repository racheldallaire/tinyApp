<meta charset='utf-8'>
<link rel="icon" href="favicon.ico">

<title>The Mighty TinyApp</title>

<% if (user) { %>

<h3><%= "Welcome, " + user + "."  %>

<form style="display: inline-block" action="/logout" method="POST">
      <input type="submit" value="Logout"><p>
      </p>
    </form></h3>

<% } else { %>

<form action="/login" method="POST">
      <label for="user">Username:</label>
      <input id="user" type="text" name="username" style="width: 100px">
      <input type="submit" value="Sign in"><p>
      </p>
    </form>

<% } %>